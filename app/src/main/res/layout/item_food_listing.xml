<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/grey_700"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_iv_product_item_food_listing"
            android:contentDescription="TODO"
            android:src="@drawable/ic_placeholder_item_food_listing"
            app:layout_constraintBottom_toBottomOf="@+id/tv_product_name_pl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="100dp"
            tools:layout_width="100dp"
            tools:src="@drawable/ic_placeholder_item_food_listing" />

        <TextView
            android:id="@+id/tv_product_name_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:maxLines="3"
            android:textColor="@color/grey_50"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="3dp"
            tools:text="product name"
            tools:textColor="@color/white"
            tools:textSize="16sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

